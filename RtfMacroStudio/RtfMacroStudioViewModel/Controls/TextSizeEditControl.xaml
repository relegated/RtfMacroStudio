<UserControl x:Class="RtfMacroStudioViewModel.Controls.TextSizeEditControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RtfMacroStudioViewModel.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="150">
    <Grid>
        <Canvas HorizontalAlignment="Left" Height="30" VerticalAlignment="Top" Width="140" Background="White">
            <Label Content="Text Size:" VerticalAlignment="Center"/>
            <ComboBox x:Name="ComboBoxSizes" Canvas.Left="70" Width="50" VerticalAlignment="Center" Canvas.Top="4"/>
        </Canvas>
    </Grid>
</UserControl>
