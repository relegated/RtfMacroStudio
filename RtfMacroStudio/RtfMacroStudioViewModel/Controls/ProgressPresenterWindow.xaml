<Window x:Class="RtfMacroStudioViewModel.Controls.ProgressPresenterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RtfMacroStudioViewModel.Controls"
        mc:Ignorable="d"
        Title="Task Running..." Height="175" Width="300" ShowInTaskbar="False" ResizeMode="NoResize" Closing="Window_Closing" Topmost="True">
    <Grid>
        <Label x:Name="LabelProgress" Content="Currently Running Task..." HorizontalAlignment="Left" Margin="10,29,0,0" VerticalAlignment="Top" Width="272"/>
        <ProgressBar x:Name="ProgressBarTaskRunProgress" HorizontalAlignment="Left" Height="38" Margin="10,67,0,0" VerticalAlignment="Top" Width="272"/>
    </Grid>
</Window>
