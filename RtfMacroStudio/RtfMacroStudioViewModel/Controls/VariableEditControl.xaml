<UserControl x:Class="RtfMacroStudioViewModel.Controls.VariableEditControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RtfMacroStudioViewModel.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="320">
    <Grid>
        <Canvas Background="White">
            <Label Content="Variable _Name" Canvas.Left="13" Canvas.Top="12"/>
            <TextBox x:Name="TextBoxName" Height="23" Canvas.Left="13" TextWrapping="Wrap" Text="" Canvas.Top="38" Width="120" TextChanged="TextBoxName_TextChanged"/>
            <Label Content="_Value" Canvas.Left="157" Canvas.Top="12"/>
            <TextBox x:Name="TextBoxValue" Height="23" Canvas.Left="157" TextWrapping="Wrap" Text="0" Canvas.Top="38" Width="38" PreviewTextInput="TextBoxIntValue_PreviewTextInput"/>
            <Label Content="_Increment By" Canvas.Left="211" Canvas.Top="12"/>
            <TextBox x:Name="TextBoxIncrementValue" Height="23" Canvas.Left="222" TextWrapping="Wrap" Text="1" Canvas.Top="38" Width="38" PreviewTextInput="TextBoxIntValue_PreviewTextInput"/>
        </Canvas>
    </Grid>
</UserControl>
